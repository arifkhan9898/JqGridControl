<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Import Project="MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets"/>

    <Target Name="Clean">
        <MSBuild Targets="Clean" Projects="../JqGridControl.sln" />
    </Target>

    <Target Name="Rebuild">
        <MSBuild Targets="Rebuild" Projects="../JqGridControl.sln" Properties="Configuration=Release"/>
    </Target>
    
    <Target Name="Build" DependsOnTargets="Clean;Rebuild">
		<Copy
            SourceFiles="../src/JqGridControl/bin/Release/JqGridControl.dll"
            DestinationFiles="./Package/lib/net40/JqGridControl.dll"
        />
	</Target>
</Project>